    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug Tests",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            "program": "dotnet",
            "args": ["test", "--configuration", "Debug", "--logger", "console;verbosity=detailed"],
            "cwd": "${workspaceFolder}/api.tests",
            "console": "internalConsole",
            "stopAtEntry": false,
            "env": {
                "DOTNET_SYSTEM_GLOBALIZATION_INVARIANT": "1"
            }
        },
        {
            "name": ".NET Core Attach",
            "type": "coreclr",
            "request": "attach"
        }
    ]
}